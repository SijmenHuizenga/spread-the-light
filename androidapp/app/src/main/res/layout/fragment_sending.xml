<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/spread_the_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/flashlightsubmitbutton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/flashlightinput"
            android:layout_marginTop="32dp" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
            android:background="@color/colorAccent"/>
    <EditText
        android:id="@+id/flashlightinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/flashlightsubmitbutton"
        app:layout_constraintStart_toStartOf="@+id/flashlightsubmitbutton"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
            android:text="@string/enter_your_message_you_would_like_to_spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="@+id/flashlightinput"
            app:layout_constraintEnd_toEndOf="@+id/flashlightinput"/>
</androidx.constraintlayout.widget.ConstraintLayout>